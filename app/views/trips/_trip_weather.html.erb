
<table class="table table-striped table-hover">
    <tbody>
        <tr>
            <td class='col-xs-2'><i class='fa fa-tachometer'></i></td>
            <td class='col-mxs-2'><%= @weather.temp_min%> - <%= @weather.temp_max%> Â°F</td>
        </tr>
        <tr>
            <td class='col-md-2'><i class='fa fa-newspaper-o'></i></td>
            <td class='col-mxs-2'><%= @weather.description.capitalize %></td>
        </tr>

