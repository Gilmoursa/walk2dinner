<h1>Here's your trip <%= @user.name.capitalize%>!</h1>
<hr>
<div class="row">
    <div class='col-xs-3'>
        <img src="<%=@restaurant.image_url%>"/>
    </div>
    <div class='col-xs-9'>
        <h4><%= link_to "#{@restaurant.name}", @restaurant.url%></h4>
        <div>
            <%= render 'restaurant_info', local:@user %>
        </div>
    </div>
</div>
<div class='row'>
    <div class='col-xs-6'>
        <h4>Directions</h4>
        <%= render 'trip_directions' %>
    </div>
    <div class='col-xs-6'>
        <h4>Weather Report</h4>
        <%= render 'trip_weather', local:@user %>
    </div>
</div>
