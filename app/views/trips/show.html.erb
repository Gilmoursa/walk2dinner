<h1>Here's your trip <%= current_user.name.capitalize%>!</h1>
<hr>
<div class="row">
    <div class='col-xs-2'>
        <img src="<%=@restaurant.image_url%>"/>
    </div>
    <div class='col-xs-10'>
        <h4><%= link_to "#{@restaurant.name}", @restaurant.url%></h4>
        <div>
            <%= render 'restaurant_info'%>
        </div>
    </div>
</div>
<hr>
<div class='row'>
    <div class='col-xs-6'>
        <h4>Directions</h4>
        <%= render 'trip_directions' %>
    </div>
    <div class='col-xs-6'>
        <h4>Weather Report</h4>
        <%= render 'trip_weather' %>
    </div>
</div>
